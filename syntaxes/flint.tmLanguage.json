{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Flint",
	"patterns": [
		{
			"include": "#addressLiteral"
		},
		{
			"include": "#controlKeywords"
		},
		{
			"include": "#integer"
		},
		{
			"include": "#float"
		},
		{
			"include": "#boolean"
		},
		{
			"include": "#numericOperator"
		},
		{
			"include": "#logicalOperator"
		},
		{
			"include": "#assignmentOperator"
		},
		{
			"include": "#self"
		},
		{
			"include": "#identifier"
		},
		{
			"include" : "#declarationKeywords"
		},
		{
			"include" : "#modifiers"
		},
		{
			"include" : "#string"
		},
		{
			"include" : "#accessor"
		},
		{
			"include" : "#colon"
		}
	],
	"repository": {
		"controlKeywords": {
			"patterns": [{
				"name": "keyword.control.flint",
				"match": "\\b(if|while|for|return|become|event)\\b"
			}]
		},
		"integer": {
			"patterns": [{
				"name": "constant.numeric.integer.flint",
				"match": "\\d+"
			}]
		},
		"float": {
			"patterns": [{
				"name": "constant.numeric.float.flint",
				"match": "\\d+\\.\\d+"
			}]
		},
		"boolean":{
			"patterns": [{
				"name": "constant.language",
				"match": "\\b(true|false)\\b"
			}]
		},
		"addressLiteral":{
			"patterns": [{
				"name": "constant.numeric.hex",
				"match": "0x([A-F0-9a-f])+"
			}]
		},
		"numericOperator":{
			"patterns": [{
				"name": "keyword.operator.arithmetic.flint",
				"match": "(\\+|\\-|\\*|\\/|\\*\\*|&\\*|&-|&\\+)"
			}]
		},
		"logicalOperator":{
			"patterns": [{
				"name": "keyword.operator.logical.flint",
				"match": "(\\|\\||&&|!|>|<|>=|<=|==)"
			}]
		},
		"assignmentOperator":{
			"patterns": [{
				"name": "keyword.operator.assignment.flint",
				"match": "(\\+= | = | -= | \\*= | \\/= | !=)"
			}]
		},
		"self":{
			"patterns": [{
				"name": "variable.language.flint",
				"match": "self|this"
			}]
		},
		"declarationKeywords":{
			"patterns": [{
				"name": "storage.type.flint",
				"match": "\\b(func|contract|enum|Int|Bool|String|Address)\\b"
			}]
		},
		"modifiers":{
			"patterns": [{
				"name": "storage.modifier.flint",
				"match": "\\b(mutating|visible|let|var|public)\\b"
			}]
		},
		"accessor":{
			"patterns": [{
				"name": "punctuation.accessor",
				"match": "\\."
			}]
		},
		"string":{
			"patterns": [{
				"name": "string.flint",
				"begin": "\"",
				"end": "\"",
				"beginCaptures": {"0": {"name":"punctuation.definition.string.begin"}},
				"endCaptures": {"0": {"name":"punctuation.definition.string.end"}},
				"patterns": [{
					"name":"string",
					"match": "\\w+"
				}]
			}]
		},
		"colon":
		{
			"patterns": [{
				"name": "punctuation.separator",
				"match": ":"
			}]
		}
	},
	"scopeName": "source.flint"
}
